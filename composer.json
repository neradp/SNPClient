{
    "name": "btd/snp-client",
    "description": "SNP Snarl client implementation for sending messages",
    "type": "library",
    "authors": [
        {
            "name": "Peter Ner√°d",
            "email": "nerad.peter@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-sockets": "*"
    },
  "autoload": {
    "psr-0": {
      "bTd\\": "src/"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "cs-check": "phpcs --report=xml --report-file=build/phpcs.xml",
    "cs-fix": "phpcbf",
    "test": "phpunit --colors=always",
    "doc": "phpdox",
    "md": "phpmd src xml codesize --reportfile build/phpmd.xml",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
    "loc": "phploc --count-tests --log-xml=build/phploc.xml src tests"
  },
    "require-dev": {
        "phpunit/phpunit": "^7.3",
        "mockery/mockery": "^1.1"
    }
}
