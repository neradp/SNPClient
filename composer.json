{
    "name": "btd/snp-client",
    "description": "SNP Snarl client implementation for sending messages",
     "keywords": ["SNP","SNP3.1","SNPClient","Snarl"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Ner√°d",
            "email": "nerad.peter@gmail.com",
            "homepage": "http://www.nerad.sk"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-sockets": "*"
    },
  "autoload": {
    "psr-4": {
      "bTd\\": "src/bTd"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "cs-check": "phpcs --report=xml --report-file=build/phpcs.xml",
    "cs-fix": "phpcbf",
    "test": "phpunit",
    "test-nosrv": "phpunit --exclude-group=RequireServer",
    "doc": "phpdox",
    "md": "phpmd src xml codesize --reportfile build/phpmd.xml",
    "loc": "phploc --count-tests --log-xml=build/phploc.xml src tests"
  },
    "require-dev": {
        "phpunit/phpunit": "^7.3",
        "ext-xdebug": "*"
    }
}
